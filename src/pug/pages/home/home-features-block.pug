.home-features-block(id="Feature")
  .home-features-block__bg_figure
    picture
      source(srcset="./assets/images/home-features-block/Figure@05x.png", media="(max-width: 600px)")
      source(srcset="./assets/images/home-features-block/Figure@075x.png", media="(max-width: 1440px)")
      source(srcset="./assets/images/home-features-block/Figure.png")
      img(src="./assets/images/home-features-block/Figure.png", alt="Image")
  .home-features-block__bg
    .paralax-screen
      .paralax-screen-wrapper-transform
        .paralax-screen-wrapper-scale
          img(loading="lazy" src="./assets/images/home-features-block-bg.jpg")
  .home-features-block__title
    div.text-style-1920-h-1.text-white Features
  each val in features
    .home-features-block__item
      div.home-features-block__item-img
        div.home-features-block__item-img-wrap
          img(src=val.img loading="lazy")
      .home-features-block__item__text
        div.text-style-1920-h-3.text-white=val.title
        div.text-style-1920-body.text-gray=val.text
  .home-features-block__bottom
